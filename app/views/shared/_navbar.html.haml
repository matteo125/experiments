%header
  %nav.navbar.navbar-default
    .container
      .navbar-left
        %a.navbar-brand
          = image_tag("/images/")
        %ul.nav.navbar-nav
          %li
            = link_to 'Home', root_path
          %li
            = link_to 'About', about_path
          %li
            = link_to 'Contact', contact_path
          %li
            = link_to 'Help', help_path
      .navbar-right
        - if logged_in?
          %ul.nav.navbar-nav
            %li.dropdown
              %a{href: "#", class: "dropdown-toggle", data: {toggle: "dropdown"}}
                = @current_user.name
                %b{class: "caret"}
              %ul.dropdown-menu
                %li
                  = link_to 'Your posts', microposts_path
                %li.divider
                %li
                  = link_to 'Logout', logout_path, method: :delete
        - else
          %ul.nav.navbar-nav
            %li
              = link_to 'Login', login_path
